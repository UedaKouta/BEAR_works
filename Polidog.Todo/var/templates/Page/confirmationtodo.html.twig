{% extends 'layout/base.html.twig' %}

{% block content %}
    <h1 class="page-header">タスク</h1>
    <div class="row">
        <div class="col-sm-8">
            <div class="panel panel-default">
                <div class="panel-heading">タスク編集</div>
                <div class="panel-body">
                    <ul class="nav nav-tabs">
  　　　　　　　　　       <li role="presentation">
                            <a href="/">戻る</a> </li>

                    </ul>

                    {% if todos %}
                        <table class="table">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Title</th>
                                <th> </th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for todo in todos %}
                                <tr>
                                    <td>{{ todo.id }}</td>
                                    <td>{{ title }}</td>
                                    <td>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <a class="btn btn-success" href="/registrationtodo?title={{ title }}">登録</a>
                        
                    {% endfor %}
                    {% else %}
                        <div class="panel-body">
                            <p>タスクがありません</p>
                        </div>
                    {% endif %}

                </div>
            </div>

        </div>
    </div>
{% endblock %}
